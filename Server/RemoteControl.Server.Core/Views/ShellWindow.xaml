<mahapps:MetroWindow
    x:Class="RemoteControl.Server.Core.Views.ShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    Title="MainWindow"
    Width="800"
    Height="450"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Label Content="{Binding Test}" />
        <tb:TaskbarIcon
            x:Name="taskBarIcon"
            IconSource="pack://application:,,,/RemoteControl.Server.Core;component/Resources/rc.ico"
            MenuActivation="RightClick"
            ToolTipText="Remote Control">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        x:Name="miRestore"
                        Click="miRestore_Click"
                        Header="Restore" />
                    <MenuItem
                        x:Name="miClose"
                        Click="miClose_Click"
                        Header="Close" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</mahapps:MetroWindow>
